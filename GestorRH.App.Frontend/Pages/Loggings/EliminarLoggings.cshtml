@page
@model GestorRH.App.Frontend.Pages.EliminarLoggingsModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trabajador | Grupo4</title>
    <link rel="stylesheet" href="~/css/estilohome.css">
</head>
<body>
        <div class="wrapper">
            <div class="pestana">
                <h2>Trabajador</h2>
                <ul> 
                    <li><a asp-route-Super="@Model.log.Id" asp-page="./ListaLoggings"><img class="logo" src="~/img/leerUsuario.png" width="35" height="35" alt="Leer Usuario">Buscar</a></li>                              
                    <li><a asp-route-Super="@Model.log.Id" asp-page="./CrearLoggings"><img class="logo" src="~/img/agregarUsuario.png" width="35" height="35" alt="Agregar Usuario">Crear</a></li>
                    <li><a asp-route-Super="@Model.log.Id" asp-page="./EliminarLoggings"><img class="logo" src="~/img/borrarUsuario.png" width="35" height="35" alt="Eliminar Trabajador">Borrar</a></li>
                    <li><a asp-route-Super="@Model.log.Id" asp-page="./EditarLoggings"><img class="logo" src="~/img/editarUsuario.png" width="35" height="35" alt="Actualizar Usuario">Editar</a></li>
                    <li><a asp-route-Super="@Model.log.Id" asp-page="/Inicial/SuperUser"><img class="logo" src="~/img/volver.png" width="35" height="35" alt="F que flipas Usuario">Volver</i></a></li>
                </ul>
            </div>
            <div class="main-content">
                <div class="header">SISTEMA DE USUARIOS</div>
                  <div class="info">
                            <form method="post" >
                                <div class="filtro">
                                     <label for="usuario">Ingrese Nombre del usuario a Eliminar</label>
                                     <input asp-for="loggingFiltro.Usuario" asp-route-loggingId="loggingFiltro.Usuario" placeholder="Ingrese Nombre" class="form-control">
                                     <button type="submit" class="btn btn-primary">Buscar</button>
                                </div>
                                <div class="Temporal">@if(TempData["success"]!=null)
                                    {
                                        <h2>@TempData["success"]</h2>
                                    }</div>
                                <table class="table">
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Contraseña</th>
                                        <th>SuperUsuario</th>
                                    </tr>
                                    @foreach (var loggings in Model.logging)
                                    {
                                        <tr>
                                            <td>@loggings.Usuario</td>
                                            <td>@loggings.Contrasena</td>
                                            <td>@loggings.SuperUser</td>
                                            <td>
                                                <button type="submit" class="btnborrar" name="loggingId" value="@loggings.Id"><img src="~/img/borrar.png" width="30" height="30" alt="Editar Usuario"></button>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </form>
                    </div>
            </div>
</body>
</html>
